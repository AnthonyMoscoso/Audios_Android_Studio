<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7934BD"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnClick"
            android:layout_width="295dp"
            android:layout_height="284dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@drawable/boton_circular"
            android:onClick="Listen"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/play" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="338dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:background="#7934BD"
            android:padding="15dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:text="Hola"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="257dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTiempo"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0:20" />

            <TextView
                android:id="@+id/txtSize"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/1:20" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_red"
                android:onClick="ResetAudio"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/stop" />

        </LinearLayout>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="262dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:onClick="Back2"
            android:background="#2196F3"
            android:text="Back" />

    </LinearLayout>
</RelativeLayout>